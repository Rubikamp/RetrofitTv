<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_view"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_view"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/imageview_actor"
            app:layout_constraintTop_toTopOf="@id/imageview_actor"
            tools:text="Tom Hardy" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_view"
            android:textColor="@color/black"
            android:fontFamily="@font/italic_font"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/imageview_actor"
            app:layout_constraintTop_toBottomOf="@id/textview_actor_name"
            tools:text="Male" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_view"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/imageview_actor"
            app:layout_constraintTop_toBottomOf="@id/textview_actor_gender"
            tools:text="1980/04/11" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_view"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/imageview_actor"
            app:layout_constraintTop_toBottomOf="@id/textview_actor_birthday"
            tools:text="UK" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_view"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="180dp"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/imageview_actor"
            tools:text="tomhardyactorUS@gmail.com"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textview_actor_url"
            tools:ignore="MissingConstraints"
            tools:text="tom_hardy_official" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textview_actor_name"
            tools:ignore="MissingConstraints"
            tools:text="Netflix.com" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textview_actor_links"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="3dp"
            tools:text="venom" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_actor_deathday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italic_font"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textview_actor_id"
            tools:ignore="MissingConstraints"
            tools:text="still alive" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
